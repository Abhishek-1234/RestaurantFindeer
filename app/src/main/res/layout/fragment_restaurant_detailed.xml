<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="650dp"
    android:background="#fff"
    tools:context="com.example.abhishek.restaurantfindeer.views.RestaurantDetailedFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="650dp">

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/detailedImage"
            />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:id="@+id/layout_linear"
            android:layout_below="@+id/detailedImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:id="@+id/RestaurantName"
                android:text="asdfjkhalksfhkljashdflkjashf"
                android:textAlignment="center"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textAlignment="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:id="@+id/RestaurantAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address:"/>

            <TextView
                android:textAlignment="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="Cuisines:"
                android:id="@+id/RestaurantCuisines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textAlignment="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:maxLines="2"
                android:text="Average Cost For Two Person:"
                android:id="@+id/RestaurantCostForTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            
            <TextView
                android:textAlignment="center"
                android:text="Online Delivery:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/online_delivery"
                />
        </LinearLayout>

        <Button
            android:text="Reviews"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:layout_below="@+id/layout_linear"
            android:id="@+id/reviews"
            />

        <Button
            android:text="GoogleMap"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_button"
            android:layout_below="@+id/layout_linear"
            android:id="@+id/map"
            />
        <Button
            android:text="Contact"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:layout_below="@+id/layout_linear"
            android:id="@+id/contact"
            />
    </RelativeLayout>

</RelativeLayout>
